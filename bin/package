ROOT=$(dirname $0)
DISTRIBUTOR=$(lsb_release --id --short | perl  -ne 'print lc')
CODENAME=$(lsb_release --codename --short | perl  -ne 'print lc')

APP=$(${ROOT}/app)
ARCH=amd64
OWNER=shoritshly
PROJECT=${OWNER}/${APP}
URL=https://github.com/${PROJECT}
PREFIX=/opt

echo ${PROJECT}
echo ${DISTRIBUTOR}
echo ${CODENAME}
echo ${ARCH}

fpm --verbose \
    -s dir \
    -t deb \
    -C _rel \
    --url ${URL} \
    --architecture ${ARCH} \
    --name $(bin/app) \
    -v $(bin/version) \
    --prefix ${PREFIX} .

package_cloud yank \
              ${PROJECT}/${DISTRIBUTOR}/${CODENAME} \
              $(bin/app)_$(bin/version)_${ARCH}.deb

package_cloud push \
              ${PROJECT}/${DISTRIBUTOR}/${CODENAME} \
              $(bin/app)_$(bin/version)_${ARCH}.deb

curl -H "Content-Type: application/json" \
     --data '{"source_type": "Branch", "source_name": "master"}' \
     -X POST \
     https://registry.hub.docker.com/u/${OWNER}/${APP}/trigger/${DOCKER_TRIGGER}/
