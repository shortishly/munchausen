${LANG:=en_US.utf8}
export LANG

DISTRIBUTOR=$(lsb_release --id --short | perl  -ne 'print lc')
CODENAME=$(lsb_release --codename --short | perl  -ne 'print lc')

APP=$(bin/app)
ARCH=$(dpkg --print-architecture)
OWNER=shortishly
PROJECT=${OWNER}/${APP}
URL=https://github.com/${PROJECT}
PREFIX=/opt
VERSION=$(bin/version)

echo ${APP}
echo ${PROJECT}
echo ${DISTRIBUTOR}
echo ${CODENAME}
echo ${ARCH}

fpm --verbose \
    -s dir \
    -t deb \
    -C _rel \
    --url ${URL} \
    --architecture ${ARCH} \
    --name ${APP} \
    -v ${VERSION} \
    --prefix ${PREFIX} .

package_cloud yank \
              ${PROJECT}/${DISTRIBUTOR}/${CODENAME} \
              ${APP}_${VERSION}_${ARCH}.deb

package_cloud push \
              ${PROJECT}/${DISTRIBUTOR}/${CODENAME} \
              ${APP}_${VERSION}_${ARCH}.deb

# curl -H "Content-Type: application/json" \
#      --data '{"source_type": "Branch", "source_name": "master"}' \
#      -X POST \
#      https://registry.hub.docker.com/u/${PROJECT}/trigger/${DOCKER_TRIGGER}/
